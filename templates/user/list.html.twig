{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <section class="users-list-section margin-top-50">
        <div class="wrapper">

            {% if users|length == 0 %}
                <div class="alert alert-warning" role="alert">
                    Il n'y a pas encore d'utilisateur enregistré. <a href="{{ path('user_create') }}" class="btn btn-warning pull-right">Créer un utilisateur</a>
                </div>
            {% else %}
                <div class="table-scroll">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom d'utilisateur</th>
                            <th>Adresse email</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <th scope="row">{{ loop.index }}</th>
                                <td>{{ user.userIdentifier }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        Administrateur
                                    {% endif %}
                                    {% if 'ROLE_USER' in user.roles %}
                                        Utilisateur
                                    {% endif %}
                                </td>
                                <td>

                                    {% if user.email not in 'admin@todoandco.com' %}
                                        <a class="actions" href="{{ path('user_edit', {'id' : user.id}) }}">
                                            <img src="{{ asset('img/pen.svg') }}" alt="">
                                        </a>
                                    {% endif %}

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}

        </div>
    </section>
{% endblock %}
